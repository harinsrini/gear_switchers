      <h4> Explore Ski </h4>
        <div class='cards-cat'></div>
          <div class="cards-cat-1">
            <% @products_ski.each do |product| %>
                <div class="card-category-sking">
                  <%= link_to edit_product_path(product) do %>
                  <%= link_to "Update", edit_product_path(product), class: "btn btn-primary" %>
                  <%= cl_image_tag (product.photo), height: 300, width: 400, crop: :fill %>
                  <% end %>
                    <div class="card-category-infos">
                      <div>
                        <h2><%= product.name %></h2>
                        <p><%= product.description %></p>
                      </div>
                      <h3 class="card-category-pricing">£99.99</h3>
                      <p class="verif"><strong>Verified</strong></p>
                    </div>
                </div>
            <% end %>
          </div>
        </div>


