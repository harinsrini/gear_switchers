<%#= render 'form', product: @product %>

<%#= link_to, product_path do %>
<div class="container">
    <div class="simple-form col-sm-4 py-10">
      <h5><strong>Create your product </strong></h5>
        <div class="form"></div>
          <%= simple_form_for(@product) do |f| %>
          <!-- [...] -->
          <%= f.input :name, label: "Enter the name of the product"  %>

          <%= f.input :description, label: "Enter your product description"%>

          <%= f.input :category, label: "Enter the product category" %>

          <%= f.input :price_per_day, label: "Enter your desired price"%>

          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>

          <%= f.submit "Add a product", class: "btn btn-primary" %>
          <!-- [...] -->
          <% end %>
        </div>
    </div>
</div>


