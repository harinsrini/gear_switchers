<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1454618454636-a42c7330ccce?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container">
    <h1>Welcome to your dashboard</h1>

      <%# if @products_ski.count > 0 %>

      <div class="cardings">
        <h4> Products List </h4>
            <% #end %>
              <div class="carding">
              <% @products.each do |product| %>
                <div class="carding-cat">
                  <%= cl_image_tag (product.photo), height: 300, width: 400, crop: :fill %>
                    <div class="carding-cat-infos">
                      <div>
                        <h2><%= product.name %></h2>

                      </div>
                    </div>
                </div>
              <% end %>
            </div>
          </div>
    </div>


 <div class="cardings">
        <h4> Booked Products </h4>
            <% #end %>
              <div class="carding">
              <% @bookings.each do |booking| %>
                <div class="carding-cat">
                  <%= cl_image_tag (booking.product.photo), height: 300, width: 400, crop: :fill %>
                    <div class="carding-cat-infos">
                      <div>

                        <h2><%= booking.product.name %></h2>

                      </div>
                    </div>
                </div>
              <% end %>
            </div>
          </div>
    </div>

